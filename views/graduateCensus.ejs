        </div>
      </div>

    <div class="row">
        <div class="col-25">
          <label for="remarks">Remarks Any</label>
        </div>
        <div class="col-75">
          <input type="text" id="remarks" name="remarks" placeholder="Enter Your Remarks">
        </div>
      </div>
    
    <div class="row">
      <div class="col-25">
        <label for="suggestions">Suggestions</label>
      </div>
      <div class="col-75">
        <input type="text" id="suggestions" name="suggestions" placeholder="Enter Suggestions">
      </div>
    </div>
    <br>
    <br>
    <div class="row">
      <input type="submit" value="Submit">
    </div>
  </form>
</div>

</body>
</html>
<script type="text/javascript"> 
  function ShowHideDiv(selectedValue) {
       var selectedValue2 = selectedValue.value;
       if(selectedValue2=="Pursuing")
       {
         document.getElementById("yearOfPursuing").style.display = 'block';
       }
      else
       {
        document.getElementById("yearOfPursuingSel").value = "";
        document.getElementById("yearOfPursuing").style.display = 'none';
       }
    }
</script>